<%- include('partials/header') %>

<style>
  body {
    margin: 0 0 10rem 0;
    background-image: linear-gradient(to bottom, #f1f6f9, #9ba4b5);
    font-family: cursive;
  }

  .navbar {
    position: fixed;
    top: 0;
    width: 100%;
    z-index: 2;
    display: flex;
    justify-content: space-between;
    align-items: center;
    background-color: #9ba4b5;
    margin-top: 0px;
    padding: 1rem;
    box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
    margin-top: 0;
    border-bottom-left-radius: 20px;
    border-bottom-right-radius: 20px;
  }

  .navbar-logo {
    display: flex;
    align-items: center;
  }

  .navbar-logo img {
    height: 50px;
    margin-right: 10px;
  }

  .navbar-brand {
    font-size: 1.5rem;
    font-weight: bold;
    text-decoration: none;
    color: #212a3e;
  }

  .navbar-brand:hover {
    color: #fff;
  }

  .navbar-link {
    font-size: 1.2rem;
    font-weight: bold;
    color: #212a3e;
    padding: 0 15px 0 15px;
  }

  .navbar-link:hover {
    color: #fff;
  }

  .navbar-right {
    padding-right: 10px;
    display: flex;
    align-items: center;
  }

  .card {
    background-image: linear-gradient(to bottom, #394867, #212a3e);
    border-radius: 20px;
    margin-top: 4rem;
    box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.7);
    transition: 0.3s ease-in-out;
  }

  .btn-secondary {
    background-color: rgb(28, 192, 28);
    color: #fff;
    font-size: 20px;
  }

  .btn-secondary:hover {
    background-color: #3a943a;
  }

  .btn-primary {
    color: #fff;
    font-size: 20px;
  }

  .login {
    color: #fff;
  }

  .lable {
    font-size: 20px;
    font-weight: 500;
    color: #fff;
  }
</style>

<div class="navbar">
  <div class="navbar-logo">
    <img
      style="position: relative; bottom: 5px"
      src="/photos/logo.png"
      alt="Logo"
    />
    <h3 style="font-weight: bold; cursor: pointer">All In One Card</h3>
  </div>

  <div class="navbar-right">
    <a
      style="text-decoration: none; font-family: cursive"
      href="/contact"
      class="navbar-link"
      >Contact</a
    >
    <a style="text-decoration: none" href="/About" class="navbar-link">About</a>
  </div>
</div>

<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h1 class="text-center login">Login</h1>
          <form action="/login" method="post">
            <div class="form-group">
              <label class="lable" for="email">Email:</label>
              <input type="email" name="email" class="form-control" required />
            </div>
            <div class="form-group">
              <label class="lable" for="password">Password:</label>
              <input
                type="password"
                name="password"
                class="form-control"
                required
              />
            </div>
            <button type="submit" class="btn btn-primary btn-block">
              Login
            </button>
          </form>
          <hr />
          <button type="submit" class="btn btn-secondary btn-block">
            <a style="text-decoration: none; color: #fff" href="/register">
              Create account
            </a>
          </button>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
